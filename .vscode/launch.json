{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Web [Launch Chrome Desktop]",
            "url": "https://finance.local.wads.dev",
            "webRoot": "${workspaceFolder}/Web"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Web [Attach Chrome Android]",
            "port": 9222,
            "address": "localhost",
            "webRoot": "${workspaceFolder}/Web",
            "urlFilter": "https://*.wads.dev/*",
            "timeout": 20000,
            "preLaunchTask": "adb-forward-chrome-devtools"
        }
    ],
    "tasks": [
        {
            "label": "adb-forward-chrome-devtools",
            "type": "shell",
            "command": "adb forward tcp:9222 localabstract:chrome_devtools_remote",
            "problemMatcher": []
        }
    ]
}
